{
   "name" : "TabMessi",
   "version" : "0.0.0",
   "homepage_url" : "https://github.com/ohcibi/tabmessi",
   "author" : "Tobias Witt",
   "developer" : {
      "name" : "Tobias Witt"
   },
   "description" : "The one important plugin for the casual Tab Messi",
   "manifest_version" : 2,
   "short_name" : "TM",
   "permissions" : [
      "storage",
      "tabs",
      "activeTab",
      "unlimitedStorage",
      "sessions",
      "bookmarks"
   ],
   "incognito" : "spanning",
   "options_ui" : {
      "browser_style" : true,
      "page" : "options/index.html"
   },
   "applications" : {
      "gecko" : {
         "strict_min_version" : "60.0",
         "id" : "tabmessi@dwgadf.de"
      }
   },
   "commands" : {
      "_execute_sidebar_action" : {
         "description" : "Hotkey for showing/hiding the tab sidebar",
         "suggested_key" : {
            "default" : "Alt+Shift+N"
         }
      }
   },
   "browser_action" : {
      "browser_style" : true,
      "default_icon" : {
        "128" : "sidebar/assets/images/icons/icon-128.png",
        "256" : "sidebar/assets/images/icons/icon-256.png",
        "512" : "sidebar/assets/images/icons/icon.png"
      },
      "default_title" : "Show/Hide TabMessi Tab Bar"
   },
   "sidebar_action" : {
      "default_title" : "TabMessi Tab Bar",
      "browser_style" : true,
      "default_icon" : "sidebar/assets/images/icons/icon-128.png",
      "default_panel" : "sidebar/index.html"
   },
   "icons" : {
      "128" : "sidebar/assets/images/icons/icon-128.png",
      "256" : "sidebar/assets/images/icons/icon-256.png",
      "512" : "sidebar/assets/images/icons/icon.png"
   },
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
